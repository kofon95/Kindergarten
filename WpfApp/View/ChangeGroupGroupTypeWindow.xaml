<Window x:Class="WpfApp.View.ChangeGroupGroupTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.View"
        mc:Ignorable="d"
        Title="ChangeGroupGroupType" Height="300" Width="300"
		Name="ThisWindow">
	<StackPanel>
		<ComboBox DataContext="{Binding CurrentGroup}" SelectedItem="{Binding GroupType}"
				  ItemsSource="{Binding Source={StaticResource Groups}}" ItemTemplate="{StaticResource GroupsDataTemplate}"/>
		<Button Content="Сохранить" Command="{Binding ChangeGroupTypeCommand}"/>

		<WrapPanel>
			<Label Content="Текущая группа: "/>
			<Label Content="{Binding CurrentGroupType, Converter={StaticResource GroupsConverter}}"/>
		</WrapPanel>
	</StackPanel>
</Window>
